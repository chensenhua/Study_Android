<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:fitsSystemWindows="false"
        tools:context=".MainActivity">

    <Button
            android:id="@+id/btn_to_rxjava"
            style="@style/itemStyle"
            android:text="RxJava Study"

    />


    <Button
            android:id="@+id/btn_to_remoteviews"
            style="@style/itemStyle"
            android:text="RemoteViews Study"

    />


    <Button
            android:id="@+id/btn_to_threadLocal"
            style="@style/itemStyle"
            android:text="ThreadLocal Study"

    />
    <Button
            android:id="@+id/btn_to_threadhandler"
            style="@style/itemStyle"
            android:text="ThreadHandler Study"

    />
    <Button
            android:id="@+id/btn_to_lifecircle"
            style="@style/itemStyle"
            android:text="Activity生命周期Study"

    />


    <Button
            android:id="@+id/to_asynctask"
            style="@style/itemStyle"
            android:text="AsyncTask学习"


    />

    <Button


            android:id="@+id/to_window_study"
            style="@style/itemStyle"
            android:text="WindowManager学习"


    />

    <Button
            android:id="@+id/to_okhttp_study"
            style="@style/itemStyle"
            android:text="OkHttp学习"


    />


    <Button
            android:id="@+id/to_mvvm_study"
            style="@style/itemStyle"
            android:text="MVVM学习"


    />


    <Button
            android:id="@+id/to_animator_study"
            style="@style/itemStyle"
            android:text="动画学习"
            android:transitionName="share_name"

    />


    <Button
            android:id="@+id/to_kotlin_study"
            style="@style/itemStyle"
            android:text="Kotlin学习"

    />


</LinearLayout>