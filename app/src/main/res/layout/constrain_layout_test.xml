<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <ImageButton
            android:layout_width="0dp"
            android:layout_height="98dp" app:srcCompat="@mipmap/ic_launcher_round"
            android:id="@+id/imageButton"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="12dp"/>
    <ImageButton
            android:layout_width="48dp"
            android:layout_height="48dp" app:srcCompat="@drawable/bg_item"
            android:id="@+id/imageButton2"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toTopOf="@+id/imageButton"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline"
                                          android:orientation="vertical" app:layout_constraintStart_toStartOf="parent"
                                          android:layout_marginStart="20dp"
                                          app:layout_constraintGuide_begin="26dp"/>
    <TextView
            android:text="@string/app_name"
            android:layout_width="148dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            app:layout_constraintTop_toTopOf="@id/imageButton"
            app:layout_constraintStart_toEndOf="@+id/imageButton"
            android:layout_marginStart="16dp"
            app:layout_constraintEnd_toStartOf="@+id/imageButton2"
            android:layout_marginEnd="16dp"
            app:layout_constraintHorizontal_bias="0.5"
            android:layout_marginBottom="8dp"
            app:layout_constraintVertical_bias="0.5"
            app:layout_constraintBottom_toBottomOf="@+id/imageButton"


    />
    <TextView
            android:text="东方d风"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4" app:layout_constraintStart_toStartOf="@+id/guideline"
            android:layout_marginStart="8dp" app:layout_constraintBottom_toTopOf="@+id/textView5"/>
    <TextView
            android:text="dfdsafdsfadsfasd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteY="80dp"
            android:id="@+id/textView5"
            app:layout_constraintBaseline_creator="@android:integer/config_longAnimTime"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            android:layout_marginStart="8dp"/>
    <android.support.constraint.Barrier
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/barrier"
            app:barrierDirection="end"
            tools:layout_editor_absoluteX="411dp"
            app:constraint_referenced_ids="textView5,textView4"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="73dp"
            android:id="@+id/textView6" app:layout_constraintStart_toEndOf="@+id/barrier"
            android:layout_marginStart="8dp" android:fontFamily="sans-serif-smallcaps"/>


    <TextView
            android:text="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            app:layout_constraintTop_toBottomOf="@+id/group3"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/textView7"
              />
    <TextView
            android:text="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView7"
            app:layout_constraintTop_toBottomOf="@+id/group3"
            app:layout_constraintStart_toEndOf="@+id/textView"
            app:layout_constraintEnd_toStartOf="@id/textView8"
            app:layout_constraintEnd_toEndOf="parent"
            android:fontFamily="@font/cambo"/>
    <TextView
            android:text="3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView8"
             app:layout_constraintTop_toBottomOf="@+id/group3"
            app:layout_constraintStart_toEndOf="@+id/textView7"
            app:layout_constraintEnd_toEndOf="parent"/>


    <android.support.constraint.Group android:layout_width="0dp"
                                      android:layout_height="15dp"
                                      android:id="@+id/group3"
                                      app:constraint_referenced_ids="textView8,textView7,textView"
                                      android:layout_marginEnd="8dp"
                                      app:layout_constraintStart_toStartOf="@+id/guideline"
                                      android:layout_marginStart="8dp"
                                      app:layout_constraintEnd_toEndOf="parent"
                                      android:layout_marginTop="8dp"
                                      android:layout_marginBottom="8dp"

                                      app:layout_constraintBottom_toBottomOf="parent"
                                      app:layout_constraintHorizontal_bias="0.02"
                                      app:layout_constraintTop_toTopOf="parent"
                                      app:layout_constraintVertical_bias="0.58"/>

</android.support.constraint.ConstraintLayout>